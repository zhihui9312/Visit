<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/x10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/LayoutAline">

            <TextView
                style="@style/SmallTextView"
                android:text="@string/name" />

            <EditText
                android:id="@+id/tv_name"
                style="@style/SmallEditText"
                android:editable="false" />

            <include layout="@layout/layout_interval" />

            <TextView
                style="@style/SmallTextView"
                android:text="@string/sex" />

            <EditText
                android:id="@+id/tv_sex"
                style="@style/SmallEditText"
                android:editable="false" />
        </LinearLayout>
        <!-- 出生日期、疾病状态 -->

        <LinearLayout style="@style/LayoutAline">

            <TextView
                style="@style/SmallTextView"
                android:text="@string/birthday" />

            <EditText
                android:id="@+id/tv_birth_date"
                style="@style/SmallEditText"
                android:editable="false" />

            <include layout="@layout/layout_interval" />

            <TextView
                style="@style/SmallTextView"
                android:text="@string/disease_status" />

            <EditText
                android:id="@+id/tv_disease_status"
                style="@style/SmallEditText"
                android:editable="false" />
        </LinearLayout>
        <!-- 临床确诊时间 -->
        <LinearLayout style="@style/LayoutAline">

            <TextView
                style="@style/SmallTextView"
                android:text="@string/diagnose_date" />

            <EditText
                android:id="@+id/tv_diagnose_date"
                style="@style/SmallEditText"
                android:editable="false" />
        </LinearLayout>
        <!-- 病例来源 -->

        <LinearLayout style="@style/LayoutAline">

            <TextView
                style="@style/SmallTextView"
                android:text="@string/source_flag" />

            <EditText
                android:id="@+id/tv_source_flag"
                style="@style/SmallEditText"
                android:editable="false" />
        </LinearLayout>
        <!-- 身高、体重 -->


        <LinearLayout style="@style/LayoutAline">


            <TextView
                style="@style/SmallTextView"
                android:text="@string/height" />

            <EditText
                android:id="@+id/tv_height"
                style="@style/SmallEditText"
                android:editable="false" />

            <include layout="@layout/layout_interval" />

            <TextView
                style="@style/SmallTextView"
                android:text="@string/weight" />

            <EditText
                android:id="@+id/tv_weight"
                style="@style/SmallEditText"
                android:editable="false" />
        </LinearLayout>
        <!-- 收缩压、舒张压 -->

        <LinearLayout style="@style/LayoutAline">


            <TextView
                style="@style/SmallTextView"
                android:text="@string/systolic_pressure" />

            <EditText
                android:id="@+id/tv_systolic_pressure"
                style="@style/SmallEditText"
                android:editable="false" />

            <include layout="@layout/layout_interval" />

            <TextView
                style="@style/SmallTextView"
                android:text="@string/diastolic_pressure" />

            <EditText
                android:id="@+id/tv_diastolic_pressure"
                style="@style/SmallEditText"
                android:editable="false" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>