<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/x10"
              android:orientation="vertical">

    <LinearLayout style="@style/LayoutAline">

        <TextView
            style="@style/SmallTextView"
            android:text="@string/name"/>

        <EditText
            android:id="@+id/name"
            style="@style/SmallEditText"
            android:editable="false"/>

        <TextView
            style="@style/SmallTextView"
            android:text="@string/sex"/>

        <EditText
            android:id="@+id/sex"
            style="@style/SmallEditText"
            android:editable="false"/>
    </LinearLayout>

    <LinearLayout style="@style/LayoutAline">

        <TextView
            style="@style/SmallTextView"
            android:text="@string/menses_over_date"/>

        <EditText
            android:id="@+id/menses_over_date"
            style="@style/SmallEditText"
            android:editable="false"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutAline">

        <TextView
            style="@style/SmallTextView"
            android:text="@string/is_high_risk"/>

        <EditText
            android:id="@+id/is_high_risk"
            style="@style/SmallEditText"
            android:editable="false"/>

        <TextView
            style="@style/SmallTextView"
            android:text="@string/high_score"/>

        <EditText
            android:id="@+id/high_score"
            style="@style/SmallEditText"
            android:editable="false"/>

    </LinearLayout>
    <LinearLayout style="@style/LayoutAline">

        <TextView
            style="@style/SmallTextView"
            android:text="@string/create_week_days"/>

        <EditText
            android:id="@+id/create_week_days"
            style="@style/SmallEditText"
            android:editable="false"/>

        <TextView
            style="@style/SmallTextView"
            android:text="@string/create_week"/>

        <EditText
            android:id="@+id/create_week"
            style="@style/SmallEditText"
            android:editable="false"/>

    </LinearLayout>
    <LinearLayout style="@style/LayoutAline">

        <TextView
            style="@style/SmallTextView"
            android:text="@string/blood_rh"/>

        <EditText
            android:id="@+id/blood_rh"
            style="@style/SmallEditText"
            android:editable="false"/>

        <TextView
            style="@style/SmallTextView"
            android:text="@string/birth_date"/>

        <EditText
            android:id="@+id/birth_date"
            style="@style/SmallEditText"
            android:editable="false"/>

    </LinearLayout>
    <LinearLayout style="@style/LayoutAline">

        <TextView
            style="@style/SmallTextView"
            android:text="@string/address"/>

        <EditText
            android:id="@+id/address_str"
            style="@style/SmallEditText"
            android:editable="false"/>

    </LinearLayout>
</LinearLayout>